# App Settings
APP_NAME=Гра бункер
APP_VERSION=1.0.0
DEBUG=false

# Database
# For Docker: use /data path (mounted volume)
DATABASE_URL=sqlite:////data/bunker_game.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/bunker_game

# Redis (optional, for production scaling)
# REDIS_URL=redis://localhost:6379/0

# Security
# IMPORTANT: Generate a new secret key for production!
# Run: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Game Settings
MIN_PLAYERS=2  # Set to 2 for testing, 4 for production
MAX_PLAYERS=16
DISCUSSION_TIME_SECONDS=180  # 3 minutes
VOTING_TIME_SECONDS=60  # 1 minute

# CORS - comma-separated list of allowed origins
# For development: include localhost
# For production: include your domain(s) only
CORS_ORIGINS=https://bunker.zelma4.me,http://bunker.zelma4.me,http://localhost:8765,http://localhost:3000

# Rate Limiting
CHAT_RATE_LIMIT=10  # messages per minute per player
