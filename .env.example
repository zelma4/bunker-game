# App Settings
APP_NAME=Гра бункер
APP_VERSION=1.0.0
DEBUG=false

# Database
# For production, consider using PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/bunker_game
DATABASE_URL=sqlite:////data/bunker_game.db

# Redis (optional, for production)
# REDIS_URL=redis://localhost:6379/0

# Security
# IMPORTANT: Change this to a random secret key in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Game Settings
MIN_PLAYERS=4
MAX_PLAYERS=16
DISCUSSION_TIME_SECONDS=180
VOTING_TIME_SECONDS=60

# CORS (set to your domain or IP)
# Use "*" to allow all origins (not recommended for production but OK for private server)
CORS_ORIGINS=["*"]

# Rate Limiting
CHAT_RATE_LIMIT=10
